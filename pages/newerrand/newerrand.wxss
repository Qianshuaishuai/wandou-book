page {
  background: #f4f4f9;
  padding: 24rpx;
  padding-bottom: 168rpx;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.type {
  background: #fff;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
}

.type .tag-box {
  margin-top: 42rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.type .tag-box .tag {
  width: 9rpx;
  height: 36rpx;
}

.type .tag-box .tip {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333;
  margin-left: 30rpx;
}

.type .type-box {
  margin-top: 20rpx;
  margin-bottom: 45rpx;
  display: flex;
  flex-wrap: wrap;
}

.type .type-box .type-block {
  width: 200rpx;
  height: 70rpx;
  background: rgba(255, 255, 255, 0);
  border: 1px solid #ced2db;
  border-radius: 12rpx;
  text-align: center;
  line-height: 70rpx;
  position: relative;
  margin-left: 22rpx;
  margin-top: 20rpx;
}

.type .type-box .type-block .bg {
  width: 200rpx;
  height: 70rpx;
