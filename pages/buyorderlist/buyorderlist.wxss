/* pages/buyorderlist/buyorderlist.wxss */

page {
  background: #eff5fa;
}

.tab {
  width: 100%;
  display: flex;
  flex-direction: row;
  background: #fff;
  margin-bottom: 18rpx;
  padding-top: 18rpx;
  border-top: 2rpx solid #e9e9e9;
}

.tab .block-select {
  width: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
}

.tab .block-select .item-div {
  width: 100rpx;
  margin-top: 12rpx;
  height: 6rpx;
  /* margin-left: 88rpx;
  margin-right: 88rpx; */
  background: #42a4ff;
}

.tab .block-select .item {
  color: #42a4ff;
}

.tab .block {
  width: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
}

.tab .block .item-div {
  width: 100rpx;
  margin-top: 12rpx;
  height: 6rpx;
  /* margin-left: 88rpx;
  margin-right: 88rpx; */
  background: #fff;
}

.tab .block .item {
  color: #1c1c1c;
}

.list {
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-top: 20rpx;
}

.list .box {
  display: flex;
  flex-direction: column;
  background: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.list .box .top1 {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
}

.list .box .top1 .left {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 22rpx;
}

.list .box .top1 .left .icon1 {
  width: 40rpx;
  height: 40rpx;
}

.list .box .top1 .left .tip1 {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333;
  margin-left: 6rpx;
}

.list .box .top1 .status1 {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #42a4ff;
  margin-right: 24rpx;
}

.list .box .content {
  display: flex;
  flex-direction: row;
  margin-top: 42rpx;
  position: relative;
}

.list .box .content .pic-box {
  width: 180rpx;
  height: 180rpx;
  background: #f3f3f3;
  border-radius: 10rpx;
  margin-left: 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.list .box .content .pic-box .pic {
  width: 167rpx;
  height: 167rpx;
}

.list .box .content  .box2 {
  display: flex;
  flex-direction: column;
  margin-left: 24rpx;
}

.list .box .content  .box2 .tip2 {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 400rpx;
}

.list .box .content  .box2 .tip3-box {
  margin-top: 18rpx;
  display: flex;
  flex-direction: row;
}

.list .box .content  .box2 .tip3-box .tip3 {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #84909a;
}

.list .box .content  .box2 .tip3-box .tip4 {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #42a4ff;
}

.list .box .content  .box2 .tip5 {
  font-size: 27rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333;
  margin-top: 38rpx;
}

.list .box .content  .count {
  position: absolute;
  bottom: 0rpx;
  right: 32rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333;
}

.list .box .middle {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-top: 28rpx;
}

.list .box .middle .box3 {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 31rpx;
}

.list .box .middle .box3 .tip6 {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #7e7e7e;
}

.list .box .middle .box3 .tip7 {
  margin-left: 12rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #7e7e7e;
}

.list .box .middle .box4 {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-right: 31rpx;
}

.list .box .middle .box4 .tip8 {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333;
}

.list .box .middle .box4 .tip9 {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #ea2d2d;
}

.list .box .bottom {
  margin-top: 28rpx;
  margin-bottom: 28rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  margin-right: 28rpx;
}

.list .box .bottom .button1 {
  width: 180rpx;
  height: 58rpx;
  background: #fff;
  border: 1px solid #b4b4b4;
  border-radius: 29rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
