/* pages/secondhandmanager/secondhandmanager.wxss */
page {
  background: #f4f4f9;
  padding-bottom: 168rpx;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.select {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 30rpx;
  margin-top: 24rpx;
  margin-bottom: 4rpx;
}

.select .icon {
  width: 30rpx;
  height: 30rpx;
}

.select .tip2 {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
  margin-left: 20rpx;
}

.select .down {
  margin-left: 23rpx;
  width: 23rpx;
  height: 12rpx;
}

.list {
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.list .block {
  display: flex;
  flex-direction: column;
  width: 100%;
  background: #FFFFFF;
  border-radius: 12rpx;
  margin-top: 20rpx;
}

.list .block .top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 22rpx;
  margin-left: 24rpx;
  margin-right: 24rpx;
}

.list .block .top .type {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
}

.list .block .top .status {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #189BFB;
}

.list .block .diviler {
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 18rpx;
  margin-bottom: 18rpx;
  height: 1px;
  background: #E2E2E2;
}

.list .block .content {
  display: flex;
  flex-direction: row;
}

.list .block .content .pic {
  width: 160rpx;
  height: 160rpx;
  margin-left: 20rpx;
}

.list .block .content .box1 {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.list .block .content .box1 .name {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
}

.list .block .content .box1 .note {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #9E9E9E;
  margin-top: 12rpx;
}

.list .block .content .box1 .price-box {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  margin-top: 36rpx;
}

.list .block .content .box1 .price-box .price {
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FA3434;
}

.list .block .content .box1 .price-box .tag {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FA3434;
  margin-bottom: 4rpx;
}

.list .block .button {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  margin-right: 25rpx;
  margin-top: 18rpx;
  margin-bottom: 18rpx;
}

.list .block .button .delete {
  width: 150rpx;
  height: 50rpx;
  background: rgba(37, 134, 255, 0);
  border: 1px solid #B7B7B7;
  border-radius: 25rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #A3A3A3;
  line-height: 50rpx;
  text-align: center;
}

.list .block .button .edit {
  width: 150rpx;
  height: 50rpx;
  background: rgba(37, 134, 255, 0);
  border: 1px solid #B7B7B7;
  border-radius: 25rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #A3A3A3;
  line-height: 50rpx;
  text-align: center;
  margin-left: 20rpx;
}

.list .block .button .up {
  width: 150rpx;
  height: 50rpx;
  background: linear-gradient(90deg, #0080F6, #2CB3FF);
  border-radius: 25rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #ffffff;
  line-height: 50rpx;
  text-align: center;
  margin-left: 20rpx;
}