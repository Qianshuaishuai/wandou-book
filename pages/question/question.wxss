.list{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}

.list .item{
  margin-left: 20rpx;
  margin-right: 20rpx;
  align-items: center;
  margin-top: 32rpx;
  display: flex;
  flex-direction: column;
}

.list .item .content{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.list .item .content .tip{
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #666666;
}

.list .item .content .icon{
  margin-right: 20rpx;
  width: 15rpx;
  height: 28rpx;
}

.list .item .content .icon1{
  margin-top: 8rpx;
  margin-right: 14rpx;
  width: 33rpx;
  height: 18rpx;
}

.list .diviler{
  height: 2rpx;
  width: 100%;
  background: #F4F4F4;
  margin-top: 25rpx;
}

.list .item .detail{
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 18rpx;
  font-size: 28rpx;
  color: #333333;
  text-align: start;
  white-space: pre-wrap;
}