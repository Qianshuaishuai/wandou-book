page {
  background: #f4f4f9;
  padding: 24rpx;
  padding-bottom: 168rpx;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.content {
  background: #fff;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}

.content .tag-box {
  margin-top: 42rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.content .tag-box .tag {
  width: 9rpx;
  height: 36rpx;
}

.content .tag-box .tip {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333;
  margin-left: 30rpx;
}

.content .input {
  margin-top: 40rpx;
  margin-left: 28rpx;
  margin-right: 28rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0);
  border: 1px solid #ced2db;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #9b9b9b;
  line-height: 80rpx;
  padding-left: 35rpx;
}

.content .input-box {
  margin-top: 40rpx;
  margin-left: 28rpx;
  margin-right: 28rpx;
  height: 80rpx;
  position: relative;
  box-sizing: border-box;
}

.content .input-box .input2 {
  height: 80rpx;
  width: 94%;
  background: rgba(255, 255, 255, 0);
  border: 1px solid #ced2db;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #9b9b9b;
  line-height: 80rpx;
  padding-left: 35rpx;
  z-index: 1;
}

.content .input-box .date {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  right: 24rpx;
  top: 24rpx;
  z-index: 2;
}

.content .photo-box {
  margin-top: 48rpx;
  margin-left: 27rpx;
  margin-right: 27rpx;
  margin-bottom: 38rpx;
  height: 310rpx;
  position: relative;
}

.content .photo-box .bg {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  z-index: 2;
}

.content .photo-box .add {
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  top: 120rpx;
  left: 287rpx;
  z-index: 3;
}

.commit {
  margin-top: 64rpx;
  width: 100%;
  height: 109rpx;
  position: relative;
  margin-right: 28rpx;
}

.commit .bg {
  width: 100%;
  height: 109rpx;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  z-index: 1;
}

.commit .text {
  width: 100%;
  height: 109rpx;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #fff;
  text-align: center;
  z-index: 2;
  margin-top: 20rpx;
}
