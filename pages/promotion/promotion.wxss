page {
  background: #f4f4f9;
  padding-bottom: 168rpx;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.box {
  margin-top: 48rpx;
  background: #fff;
}

.box .top {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 80rpx;
  background: linear-gradient(90deg, #0080f6, #2cb3ff);
  border-radius: 30rpx 30rpx 0rpx 0rpx;
}

.box .top .icon {
  width: 39rpx;
  height: 37rpx;
}

.box .top .tip {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #fff;
  margin-left: 22rpx;
}

.box .top .data {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #fff;
  margin-left: 18rpx;
}

.list {
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
  margin-bottom: 36rpx;
}

.list .block {
  margin-left: 25rpx;
  margin-right: 25rpx;
  height: 100rpx;
  background: #f4f4f4;
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding-left: 25rpx;
  padding-right: 25rpx;
  margin-top: 10rpx;
}

.list .block .left {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.list .block .left .icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
}

.list .block .left .name {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333;
  margin-left: 18rpx;
}

.list .block .count {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #939393;
}

.list .block .money {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #f53030;
}
