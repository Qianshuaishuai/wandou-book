page {
  background: #f4f4f9;
  padding: 24rpx;
  padding-bottom: 168rpx;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.show-list {
  display: flex;
  flex-direction: column;
}

.show-list .show-block {
  width: 100%;
  background: #fff;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}

.show-list .show-block .title {
  margin-left: 36rpx;
  margin-right: 36rpx;
  margin-top: 32rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.show-list .show-block .price-box {
  display: flex;
  flex-direction: row;
  margin-left: 37rpx;
  align-items: flex-end;
  margin-top: 30rpx;
}

.show-list .show-block .price-box .tip {
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #fa3434;
}

.show-list .show-block .price-box .price {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #fa3434;
}

.show-list .show-block .price-box .old-price {
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 500;
  text-decoration: line-through;
  color: #aaa;
  margin-left: 6rpx;
}

.show-list .show-block .photo-list {
  display: flex;
  flex-direction: row;
  display: -webkit-box;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
  margin-right: 30rpx;
  margin-left: 10rpx;
  overflow-y: hidden;
  margin-top: 36rpx;
}

.show-list .show-block .photo-list .photo-block {
  width: 200rpx;
  height: 200rpx;
  margin-left: 20rpx;
  border-radius: 12rpx;
}

.show-list .show-block .photo-list .photo-block .photo {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
}

.show-list .show-block .note {
  margin-top: 28rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  background: #f4f4f9;
  border-radius: 10rpx;
  padding: 28rpx 28rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #6b6b7d;
}

.show-list .show-block .bottom {
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-top: 24rpx;
  margin-bottom: 28rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.show-list .show-block .bottom .left {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.show-list .show-block .bottom .left .icon1 {
  width: 21rpx;
  height: 26rpx;
}

.show-list .show-block .bottom .left .address {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #6b6b7d;
  margin-left: 12rpx;
}

.show-list .show-block .bottom .button {
  width: 128rpx;
  height: 44rpx;
  position: relative;
}

.show-list .show-block .bottom .button .bg {
  width: 128rpx;
  height: 44rpx;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
}

.show-list .show-block .bottom .button .tip2 {
  width: 128rpx;
  height: 44rpx;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  text-align: center;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #fff;
  padding-top: 6rpx;
}
