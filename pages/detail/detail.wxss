/* pages/detail/detail.wxss */
page{
  background: #f7f7f7;
}

.main{
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  padding-bottom: 48rpx;
}

.top {
  width: 100%;
  height: 278rpx;
  background: #38b08f;
  position: absolute;
  top: 0rpx;
  z-index: 1;
  padding-left: 40rpx;
}

.top .status{
  margin-top: 40rpx;
  font-size: 40rpx;
  color: #fffffe;
  font-weight: bold;
}

.top .number{
  margin-top: 40rpx;
  font-size: 24rpx;
  color: #fffffe;
}

.address{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 30rpx;
  margin-right: 30rpx;
  background: #ffffff;
  border-radius: 16rpx;
  margin-top: 200rpx;
  height: 200rpx;
  z-index: 10;
  box-sizing: border-box;
  padding: 0rpx 30rpx;
}

.address .icon{
  width: 44rpx;
  height: 54rpx;
  margin-right: 42rpx;
  margin-left: 18rpx;
}

.address .right{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.address .right .first{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.address .right .first .name{
  font-size: 30rpx;
  color: #2e2e2e;
}

.address .right .first .phone{
  font-size: 30rpx;
  color: #9a9a9a;
  margin-left: 16rpx;
}

.address .right .detail{
  margin-top: 22rpx;
  font-size: 30rpx;
  color: #9a9a9a;
}

.simple{
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
  margin-right: 30rpx;
  background: #ffffff;
  margin-top: 20rpx;
  height: 250rpx;
  box-sizing: border-box;
  padding: 0rpx 30rpx;
  justify-content: center;
}

.simple .item{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.simple .item .tip{
  font-size: 30rpx;
  color: #5e9182;
}

.simple .item .data{
  font-size: 30rpx;
  color: #666666;
  margin-left: 30rpx;
}

/* 书本列表start */
.list{
  margin-top: 20rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  padding: 0rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  background: #ffffff;
}

.list .item{
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 264rpx;
  width: 100%;
}

.list .item .icon{
  width: 185rpx;
  height: 212rpx;
}

.list .item .right{
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  width: 100%;
}

.list .item .right .name{
  font-size: 30rpx;
  color: #262626;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  max-width: 380rpx;

  
}

.list .item .right .middle{
  display: flex;
  flex-direction: row;
  margin-top: 18rpx;
  justify-content: space-between;
}

.list .item .right .middle .detail{
  font-size: 24rpx;
  color: #999999;
}

.list .item .right .middle .count{
  font-size: 24rpx;
  color: #262626;
}

.list .item .right .bottom{
  display: flex;
  flex-direction: row;
  margin-top: 82rpx;
  justify-content: space-between;
}

.list .item .right .bottom .price{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.list .item .right .bottom .price .tip{
  font-size: 24rpx;
  color: #262626;
}

.list .item .right .bottom .price .data{
  font-size: 24rpx;
  color: #c19e68;
  margin-left: 12rpx;
}

.list .item .right .bottom .real-price{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.list .item .right .bottom .real-price .tip{
  font-size: 24rpx;
  color: #262626;
}

.list .item .right .bottom .real-price .data{
  font-size: 24rpx;
  color: #c19e68;
  margin-left: 12rpx;
}
