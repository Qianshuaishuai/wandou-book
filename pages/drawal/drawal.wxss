/* pages/advice/advice.wxss */

.main {
  width: 100%;
  height: 100vh;
  background: #f6f5f8;
  padding-top: 28rpx;
}

.main .tip-tip {
  color: #999;
  font-size: 22rpx;
  margin-left: 18rpx;
  margin-right: 18rpx;
  margin-top: 12rpx;
}

.main .top {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 28rpx;
}

.main .top .tip1 {
  color: #f00;
  font-size: 28rpx;
}

.main .top .tip2 {
  color: #333;
  font-size: 28rpx;
}

.main .content {
  margin-top: 30rpx;
  width: 100%;
  background: #fff;
  font-size: 28rpx;
  padding-top: 24rpx;
  padding-bottom: 24rpx;
  padding-left: 27rpx;
  padding-right: 27rpx;
  box-sizing: border-box;
}

.main .phone-tip {
  color: #333;
  font-size: 28rpx;
  margin-top: 30rpx;
  margin-left: 28rpx;
}

.main .phone {
  width: 100%;
  height: 82rpx;
  background: #fff;
  padding-left: 27rpx;
  padding-right: 27rpx;
  line-height: 82rpx;
  font-size: 28rpx;
  color: #333;
  margin-top: 28rpx;
  box-sizing: border-box;
}

.submit-view {
  width: 100%;
  position: fixed;
  bottom: 88rpx;
}

.main .submit {
  margin-left: 45rpx;
  margin-right: 45rpx;
  height: 80rpx;
  background: #42A4FF;
  border-radius: 22rpx;
  line-height: 80rpx;
  color: #fff;
  font-size: 28rpx;
  box-sizing: border-box;
}
