/* pages/partner/partner.wxss */

page {
  position: relative;
}

.btn {
  width: 50%;
  height: 90rpx;
  margin-top: 50rpx;
  background-color: #38b08f;
  color: white;
  border-radius: 98rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border: none;
}

.btn::after {
  border: none;
}

.img-class {
  display: flex;
  justify-content: center;
}

.btn-new {
  width: 50%;
  height: 90rpx;
  margin-top: 50rpx;
  background-color: #38b08f;
  color: white;
  border-radius: 98rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border: none;
  position: absolute;
  bottom: 24rpx;
  left: 25%;
}

.btn-new::after {
  border: none;
}

.button-box {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-left: 33rpx;
  margin-right: 33rpx;
  margin-bottom: 48rpx;
}

.button-box .button {
  width: 330rpx;
  height: 90rpx;
  background: #55adff;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #fff;
  line-height: 90rpx;
  text-align: center;
}

.main{
  width: 100%;
  height: 125vh;
}