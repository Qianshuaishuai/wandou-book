/* pages/newsellbook/newsellbook.wxss */

page {
  background: #f4f4f9;
  padding-bottom: 168rpx;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.main {
  position: relative;
  display: flex;
  flex-direction: column;
}

.main .bg {
  width: 100%;
  height: 450rpx;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  z-index: 1;
}

.title {
  width: 100%;
  font-size: 38rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #fff;
  text-align: center;
  margin-top: 96rpx;
  z-index: 3;
}

.bg1 {
  height: 322rpx;
  width: 100%;
  margin-top: 30rpx;
  z-index: 3;
}

.comment-box {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 30rpx;
  margin-right: 25rpx;
}

.comment-box .comment {
  width: 40rpx;
  height: 40rpx;
}

.comment-box .tip1 {
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333;
  margin-left: 24rpx;
}

.list {
  margin-top: 32rpx;
  display: flex;
  flex-direction: column;
  background: #fff;
  border-radius: 12rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
  z-index: 6;
  margin-left: 25rpx;
  margin-right: 25rpx;
}

.list .block {
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom: 1px solid #e4e4e9;
}

.list .block .question-box {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 32rpx;
  margin-bottom: 32rpx;
  justify-content: space-between;
  width: 100%;
}

.list .block .question-box .left {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.list .block .question-box .left .question {
  width: 30rpx;
  height: 30rpx;
}

.list .block .question-box .left .content {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333;
  margin-left: 20rpx;
}

.list .block .question-box .direct {
  width: 40rpx;
  height: 40rpx;
}

.list .block .answer-box {
  width: 100%;
  display: flex;
  flex-direction: row;
  margin-bottom: 40rpx;
}

.list .block .answer-box .icon {
  width: 30rpx;
  height: 30rpx;
  margin-top: 8rpx;
}

.list .block .answer-box .answer {
  width: 85%;
  margin-left: 18rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #9f9f9f;
}

.button-box {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 64rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
  justify-content: center;
}

.button-box .button1 {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 277rpx;
  height: 90rpx;
  background: #fff;
  border: 1px solid #0b8df8;
  box-shadow: 0rpx 10rpx 9rpx 0rpx rgba(7, 136, 247, 0.16);
  border-radius: 45rpx;
  justify-content: center;
}

.button-box .button1 .pic {
  width: 40rpx;
  height: 40rpx;
}

.button-box .button1 .tip3 {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #189bfb;
  margin-left: 13rpx;
}

.button-box .button2 {
  display: flex;
  flex-direction: row;
  align-items: center;
  border: 1px solid #0b8df8;
  width: 86%;
  height: 90rpx;
  background: linear-gradient(90deg, #0080f6, #2cb3ff);
  box-shadow: 0rpx 10rpx 9rpx 0rpx rgba(7, 136, 247, 0.16);
  border-radius: 45rpx;
  justify-content: center;
}

.button-box .button2 .pic {
  width: 40rpx;
  height: 40rpx;
  align-self: center;
}

.button-box .button2 .tip3 {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #fff;
  margin-left: 13rpx;
  align-self: center;
}
