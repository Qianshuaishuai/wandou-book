/* pages/order/order.wxss */

.background {
  background: #f7f7f7;
  height: 100%;
  min-height: 100vh;
}

.tab {
  width: 100%;
  display: flex;
  flex-direction: row;
  background: #fff;
  margin-bottom: 18rpx;
  padding-top: 18rpx;
  border-top: 2rpx solid #e9e9e9;
}

.tab .block-select {
  width: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
}

.tab .block-select .item-div {
  width: 100rpx;
  margin-top: 12rpx;
  height: 6rpx;
  /* margin-left: 88rpx;
  margin-right: 88rpx; */
  background: #42a4ff;
}

.tab .block-select .item {
  color: #42a4ff;
}

.tab .block {
  width: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
}

.tab .block .item-div {
  width: 100rpx;
  margin-top: 12rpx;
  height: 6rpx;
  /* margin-left: 88rpx;
  margin-right: 88rpx; */
  background: #fff;
}

.tab .block .item {
  color: #1c1c1c;
}

.list {
  padding-bottom: 48rpx;
}

.list .item {
  display: flex;
  flex-direction: column;
  background: #fff;
  border-radius: 12rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-top: 18rpx;
  padding-left: 18rpx;
  padding-right: 18rpx;
  padding-top: 18rpx;
  padding-bottom: 18rpx;
}

.list .item .box1 {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.list .item .box1 .left {
  display: flex;
  direction: row;
  align-items: center;
}

.list .item .box1 .left .tip {
  font-size: 26rpx;
  color: #6d6d6d;
  font-weight: bold;
}

.list .item .box1 .left .number {
  font-size: 24rpx;
  color: #6d6d6d;
}

.list .item .box1 .status {
  font-size: 26rpx;
  color: #42a4ff;
}

.list .item .diviler {
  width: 100%;
  background: #f3f4f6;
  height: 4rpx;
  margin: 24rpx 0;
}

.list .item .box2 {
  display: flex;
  flex-direction: row;
  width: 87vw;
  overflow: auto;
}

.list .item .box2 .book-item {
}

.list .item .box2 .book-item .image {
  width: 115rpx;
  height: 150rpx;
  margin-right: 16rpx;
  background: #f7f7f7;
}

.list .item .box3 {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin: 26rpx 0 16rpx 0;
}

.list .item .box3 .time {
  font-size: 26rpx;
  color: #595959;
}

.list .item .box3 .count {
  font-size: 26rpx;
  color: #595959;
}

.list .item .box4 {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  justify-content: flex-end;
}

.list .item .box4 .cancel {
  width: 180rpx;
  height: 58rpx;
  background: #fff;
  border: 1px solid #42a4ff;
  background: #42a4ff;
  border-radius: 29rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #fff;
  line-height: 64rpx;
  margin-left: 17rpx;
  text-align: center;
}
