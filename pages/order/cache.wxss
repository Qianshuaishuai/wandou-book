/* pages/order/order.wxss */

.background{
  background: #f3f4f6;
}

.tab{
  width: 100%;
  display: flex;
  flex-direction: row;
  background: #fff;
  padding-bottom: 18rpx;
  padding-top: 18rpx;
  border-top: 2rpx solid #e9e9e9;
}

.tab .block-select{
  width: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
}

.tab .block-select .item-div{
  width: 100rpx;
  margin-top: 12rpx;
  height: 6rpx;
  /* margin-left: 88rpx;
  margin-right: 88rpx; */
  background: #38b08f;
}

.tab .block-select .item{
  color: #38b08f;
}

.tab .block{
  width: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
}

.tab .block .item-div{
  width: 100rpx;
  margin-top: 12rpx;
  height: 6rpx;
  /* margin-left: 88rpx;
  margin-right: 88rpx; */
  background: #ffffff;
}

.tab .block .item{
  color: #1c1c1c;
}

.list{
  padding-bottom: 48rpx;
}

.list .item{
  display: flex;
  flex-direction: column;
  background: #fff;
  border-radius: 12rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-top: 18rpx;
  padding-left: 18rpx;
  padding-right: 18rpx;
  padding-top: 18rpx;
  padding-bottom: 18rpx;
}

.list .item .address{
  color: #1c1c1c;
  font-size: 24rpx;
}

.list .item .book-item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.list .item .book-item .price{
  justify-self: right;
}

.list .item .price{
  padding-right: 12rpx;
  text-align: right;
}

.list .item .book-item .name{
   color: #1c1c1c;
  font-size: 24rpx;
}

.list .item .top{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-left: 12rpx;
  margin-right: 12rpx;
  margin-top: 8rpx;
  margin-bottom: 8rpx;
}

.list .item .divler{
  background: #999999;
  height: 2rpx;
  margin-top: 8rpx;
  margin-bottom: 8rpx;
}

.list .item .top .status{
  color: #1c1c1c;
  font-size: 24rpx;
}

.list .item .top .time{
  color: #999;
  font-size: 24rpx;
}
