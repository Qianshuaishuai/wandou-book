/* pages/pickschool/pickschool.wxss */

page {
  background: #f4f4f9;
  padding: 24rpx;
  padding-bottom: 168rpx;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.search-box {
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
  height: 70rpx;
  background: #fff;
  border-radius: 35rpx;
}

.search-box .search {
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  top: 21rpx;
  left: 36rpx;
}

.search-box .input {
  width: 400rpx;
  height: 70rpx;
  line-height: 70rpx;
  position: absolute;
  left: 77rpx;
  top: 0rpx;
}

.search-box .clear {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  left: 493rpx;
  top: 20rpx;
}

.search-box .button {
  width: 154rpx;
  height: 70rpx;
  position: absolute;
  right: 0rpx;
  top: 0rpx;
}

.search-box .button .bg {
  width: 154rpx;
  height: 70rpx;
  position: absolute;
  right: 0rpx;
  top: 0rpx;
}

.search-box .button .tip {
  width: 154rpx;
  height: 70rpx;
  position: absolute;
  right: 0rpx;
  top: 0rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #fff;
  line-height: 70rpx;
  text-align: center;
}

.list {
  display: flex;
  flex-direction: column;
  background: #fff;
  border-radius: 12rpx;
  margin-top: 30rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
}

.list .block {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #e4e4ea;
  padding-top: 18rpx;
  padding-bottom: 18rpx;
}

.list .block .left {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.list .block .left .icon {
  width: 46rpx;
  height: 46rpx;
}

.list .block .left .name {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #0586f7;
  margin-left: 21rpx;
  width: 250rpx;
}

.list .block .left .tip {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #949497;
  margin-left: 27rpx;
}

.list .block .apply {
  width: 183rpx;
  height: 50rpx;
  background: #fff;
  border: 1px solid #0586f7;
  border-radius: 25rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #0586f7;
  line-height: 56rpx;
  text-align: center;
}
