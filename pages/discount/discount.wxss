page {
  background: #f4f4f9;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.main {
  display: flex;
  flex-direction: column;
  position: relative;
}

.main .top {
  width: 100%;
  height: 453rpx;
  z-index: 1;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
}

.back {
  width: 34rpx;
  height: 34rpx;
  position: absolute;
  left: 30rpx;
  z-index: 8;
}

.tip {
  width: 100%;
  height: 34rpx;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #fff;
  position: absolute;
  z-index: 6;
  text-align: center;
}

.tab-box {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 200rpx;
  z-index: 9;
  display: -webkit-box;
  overflow-x: scroll;
  -webkit-overflow-scrolling: touch;
  padding-right: 25rpx;
}

.tab-box .tab-normal {
  background: rgba(255, 255, 255, 0);
  border: 1px solid #fff;
  border-radius: 30rpx;
  padding: 18rpx 50rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #fff;
  margin-left: 25rpx;
}

.tab-box .tab-select {
  background: #fff;
  border-radius: 30rpx;
  padding: 18rpx 50rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #0585f7;
  margin-left: 25rpx;
}

::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}

.list {
  display: flex;
  flex-direction: column;
  margin-top: 28rpx;
  margin-left: 24rpx;
  margin-right: 24rpx;
  z-index: 10;
  margin-bottom: 96rpx;
}

.list .block {
  display: flex;
  flex-direction: row;
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx 26rpx;
  position: relative;
  margin-top: 20rpx;
}

.list .block .pic {
  width: 170rpx;
  height: 170rpx;
}

.list .block .right {
  display: flex;
  flex-direction: column;
  margin-left: 27rpx;
  width: 444rpx;
}

.list .block .right .title {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.list .block .right .price {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #eb2e2e;
  margin-top: 12rpx;
}

.list .block .right .old {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  text-decoration: line-through;
  color: #9d9d9d;
  margin-top: 6rpx;
}

.list .block .copy {
  width: 240rpx;
  height: 50rpx;
  background: #e0f0ff;
  border-radius: 25rpx;
  text-align: center;
  line-height: 50rpx;
  position: absolute;
  bottom: 20rpx;
  right: 24rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #0484f7;
}

.post {
  margin-top: 28rpx;
  width: 100%;
  height: 138vw;
  z-index: 33;
}

.post .post-pic {
  width: 100%;
  height: 100%;
}
