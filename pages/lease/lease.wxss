/* pages/lease/lease.wxss */

page {
  background: #f4f4f9;
  padding: 24rpx;
  padding-bottom: 168rpx;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.errand-box {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 35rpx;
  justify-content: space-between;
}

.errand-box .errand-block {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-top: 32rpx;
  padding-left: 28rpx;
  padding-right: 22rpx;
  padding-bottom: 25rpx;
  width: 42%;
  position: relative;
}

.errand-box .errand-block .box4 {
  display: flex;
  flex-direction: column;
}

.errand-box .errand-block .box4 .tip5 {
  font-size: 32rpx;
  font-family: BDZongYi-A001;
  font-weight: normal;
  color: #fff;
}

.errand-box .errand-block .box4 .tip8 {
  font-size: 32rpx;
  font-family: BDZongYi-A001;
  font-weight: normal;
  color: #fff;
  position: absolute;
  top: 40rpx;
  left: 28rpx;
}

.errand-box .errand-block .box4 .tip6 {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #fff;
  margin-top: 12rpx;
}

.errand-box .errand-block .box4 .tip7 {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #fff;
  position: absolute;
  top: 100rpx;
  left: 28rpx;
}

.errand-box .errand-block .icon3 {
  margin-left: 24rpx;
  width: 120rpx;
  height: 120rpx;
}

.box {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-left: 32rpx;
  margin-right: 32rpx;
  margin-top: 36rpx;
}

.box .block {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100rpx;
  height: 80rpx;
  justify-content: center;
}

.box .block .tip10 {
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #0687f7;
}

.box .block .diviler {
  width: 100rpx;
  height: 4rpx;
  margin-top: 20rpx;
  background: #0687f7;
}

.list {
  margin-top: 9rpx;
  display: flex;
  flex-direction: column;
}

.list .item {
  height: 320rpx;
  background: #fff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  padding: 26rpx 32rpx;
  margin-top: 20rpx;
}

.list .item .top {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.list .item .top .type {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333;
}

.list .item .top  .right {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}

.list .item .top  .right .tag {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #f02c2c;
}

.list .item .top  .right .money {
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #f02c2c;
}

.list .item .content {
  height: 120rpx;
  background: #f4f4f9;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  margin-top: 28rpx;
  margin-bottom: 28rpx;
  padding: 23rpx 36rpx;
}

.list .item .content .title {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333;
  margin-top: 4rpx;
}

.list .item .content .tip12 {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #0687f7;
  margin-top: 21rpx;
}

.list .item .bottom {
  display: flex;
  flex-direction: row;
  align-content: center;
  justify-content: space-between;
}

.list .item .bottom .note {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #a3a3a3;
}

.list .item .bottom .button {
  width: 114rpx;
  height: 44rpx;
  position: relative;
}

.list .item .bottom .button .bg1 {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  z-index: 11;
}

.list .item .bottom .button .right {
  width: 10rpx;
  height: 16rpx;
  position: absolute;
  top: 12rpx;
  right: 27rpx;
  z-index: 12;
}

.list .item .bottom .button .tip13 {
  width: 40rpx;
  height: 20rpx;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #fff;
  position: absolute;
  z-index: 13;
  top: 7rpx;
  left: 27rpx;
}
