.right-class {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 150rpx;
  height: 100%;
}

.list {
  margin-bottom: 150rpx;
}

.placeholder-view {
  width: 100%;
  height: 150rpx;
}

.mask {
  position: fixed;
  width: 100%;
  height: 100vh;
  background: #f6f6f4;
  display: flex;
  flex-direction: column;
  overflow: auto;
  height: 80vh;
  padding-bottom: 200rpx;
}

.modal {
  display: flex;
  flex-direction: column;
  position: relative;
  margin: 0 30rpx;
  margin-top: 30rpx;
  background: white;
  border-radius: 8px;
  font-size: 26rpx;
  line-height: 46rpx;
  overflow: auto;
}

.modal .tip{
  font-size: 30rpx;
  color: #262626;
  margin: 30rpx 30rpx 30rpx 30rpx;
}

.modal .diviler{
  width: 100%;
  height: 1px;
  background: #d9d9d9;
}

.mask .button {
  width: 235rpx;
  height: 75rpx;
  color: #ffffff;
  background: #38b08f;
  margin-top: 24rpx;
  border-radius: 45rpx;
  line-height: 75rpx;
  text-align: center;
  align-self: center;
}

.radio-group {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.radio {
  margin: 0rpx 30rpx;
  margin-top: 24rpx;
  display: block;
  padding: 5px;
}

.radio .content {
  display: flex;
  flex-direction: column;
}

.radio .content .timedesc {
  font-size: 22rpx;
  color: #999;
}

.count {
  position: fixed;
  bottom: 12px;
  left: 48rpx;
  z-index: 99999;
}

.time-select{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 0px 30px;
}